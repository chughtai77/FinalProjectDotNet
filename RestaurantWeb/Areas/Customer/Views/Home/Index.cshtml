@model IEnumerable<Restaurant.Models.Product>

<div class="row pb-3">
    @foreach(var product in Model)
    {
        <div class="col-lg-3 col-md-6 pt-4">
            <div class="row p-2 ">
               <div class="col-12 p-1" style="border:1px solid #008cba; border-radius:5px;" >
                   <div class="card">
                        <img src="@product.ImageUrl" class="card-img-top rounded" height="300px" />
                        
                       <div class="card-body">
                       <div class="p-1">
                           <p class="card-title h5 text-primary">@product.Title</p>
                       </div>
                       @*<div class="p-1">
                           <p>List Price:<strike><b>$@product.ListPrice.ToString("0.00")</b></strike></p>
                       </div>*@
                       <div class="p-1">
                             <p>Price: <b>@product.Price.ToString("Rs-/ 0.00")</b></p>
                       </div>
                       </div>
                   </div>
                   <div>
                        <a asp-action="Details" class="btn btn-primary form-control" asp-route-ProductId="@product.Id">
                           Order Now
                       </a>
                   </div>
               </div>
           </div>
       </div> 
    }

</div>